<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/downButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:backgroundTint="#BE16DB"
        android:text="Вверх"
        android:textStyle="bold" />

    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/upButton"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/upButton"
        android:backgroundTint="#BE16DB"
        android:text="Влево"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/upButton"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/upButton"
        android:backgroundTint="#BE16DB"
        android:text="Вправо"
        android:textStyle="bold" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#BE16DB"
        android:text="Вниз"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textColor="#BF16DC"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textColor="#BF16DC"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="35dp"
       android:layout_marginStart="193dp"
        android:layout_marginTop="246dp"
        android:src="#C6670C77" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="219dp"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/lab"
        android:textAlignment="center"
        android:textColor="#BF16DC"
        android:textSize="34sp" />

</RelativeLayout>