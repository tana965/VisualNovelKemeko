<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9CC97"
    tools:context=".HomeWay">

    <ImageView
        android:id="@+id/imageWall3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yarm22" />

    <Button
        android:id="@+id/buttonNext3"
        android:layout_width="389dp"
        android:layout_height="183dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#A5A86C"
        android:contentDescription="@string/app_name"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textStory3"
        android:layout_width="333dp"
        android:layout_height="157dp"
        android:layout_marginBottom="16dp"
        android:text="Продавец:\n Возьмите карту и узнайте судьбу! "
        android:textAlignment="textStart"
        android:textColor="#494A2E"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>